<nav class="bg-blue-500 p-4">
  <div class="container mx-auto flex justify-between items-center">
    <div class="text-white font-bold text-xl">
      <%= link_to 'Barchet\'s Grocery Store', root_path %>
    </div>
    <div class="space-x-4">
