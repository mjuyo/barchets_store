<div class="container mx-auto p-4">
  <!-- Breadcrumbs -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to 'Home', root_path %></li>
      <li class="breadcrumb-item"><%= link_to @category.name, category_path(@category) %></li>
      <li class="breadcrumb-item active" aria-current="page"><%= @product.name %></li>
    </ol>
  </nav>

  <h1 class="text-2xl font-bold mb-4"><%= @product.name %></h1>

  <div class="image-container mb-4">
    <% if @product.image.attached? %>
      <%= image_tag @product.large_image, class: " object-cover" %>
    <% else %>
      <div class="image-placeholder"></div>
    <% end %>
  </div>

  <p class="mb-2"><%= @product.description %></p>
  <p class="text-lg font-bold mb-2">Price: $<%= @product.price %></p>
  <p class="mb-2">Stock: <%= @product.stock_quantity %> items</p>

  <%= form_with url: add_to_cart_product_path(@product), method: :post, local: true do |f| %>
    <%= number_field_tag :quantity, 1, min: 1, class: "w-16 p-2 border rounded mb-2" %>
    <%= f.submit 'Add to Cart', class: "bg-blue-500 text-white px-3 py-2 rounded" %>
  <% end %>

  <%= link_to 'Back to Products', products_path, class: "bg-gray-500 text-white px-3 py-2 rounded mt-4 inline-block" %>
</div>
