<!-- app/views/cart/show.html.erb -->
<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Your Shopping Cart</h1>

  <% if @cart.empty? %>
    <p>Your cart is empty.</p>
  <% else %>
    <table class="table-auto w-full">
      <thead>
        <tr>
          <th class="px-4 py-2">Product</th>
          <th class="px-4 py-2">Quantity</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @cart.each do |product_id, details| %>
          <% product = Product.find(product_id) %>
          <tr>
            <td class="border px-4 py-2"><%= product.name %></td>
            <td class="border px-4 py-2">
              <%= form_with url: add_to_cart_product_path(product), method: :post, local: true do %>
                <%= number_field_tag :quantity, details['quantity'], min: 1, class: "w-16 p-2 border rounded mb-2" %>
                <%= submit_tag 'Update', class: "bg-blue-500 text-white px-3 py-2 rounded" %>
              <% end %>
            </td>
            <td class="border px-4 py-2">
              <%= button_to 'Remove', remove_from_cart_product_path(product), method: :post, class: "bg-red-500 text-white px-3 py-2 rounded" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'Checkout', new_order_path, class: "bg-green-500 text-white px-3 py-2 rounded mt-4 inline-block" %>
  <% end %>
</div>
