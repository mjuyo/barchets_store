<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Invoice</h1>

  <div class="flex justify-between">
    <div class="w-1/2 pr-4">
      <div class="bg-gray-100 shadow rounded p-4 mb-4 h-full">
        <h2 class="text-lg font-semibold">Order Information</h2>
        <p><strong>Order ID:</strong> <%= @order.id %></p>
        <p><strong>Order Date:</strong> <%= @order.order_date %></p>
        <p><strong>Customer Name:</strong> <%= @order.customer.name %></p>
        <p><strong>Shipping Address:</strong> <%= @order.address %></p>
        <p><strong>Province:</strong> <%= @order.province.name %></p>
      </div>
    </div>
    <div class="w-1/2 pl-4">
      <div class="bg-gray-100 shadow rounded p-4 mb-4 h-full">
        <h2 class="text-lg font-semibold">Pricing Summary</h2>
        <p><strong>Sub Total Price:</strong> $<%= @order.sub_total_price %></p>
        <p><strong>PST:</strong> $<%= @pst %></p>
        <p><strong>GST:</strong> $<%= @gst %></p>
        <p><strong>HST:</strong> $<%= @hst %></p>
        <p><strong>QST:</strong> $<%= @qst %></p>
        <p><strong>Total Tax:</strong> $<%= @order.total_tax %></p>
        <p><strong>Grand Total:</strong> $<%= @order.sub_total_price + @order.total_tax %></p>
      </div>
    </div>
  </div>

  <h2 class="text-xl font-semibold mt-4">Order Details</h2>
  <div class="bg-white shadow-md rounded-lg p-4">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @order.order_products.each do |order_product| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap"><%= order_product.product.name %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= order_product.quantity %></td>
            <td class="px-6 py-4 whitespace-nowrap">$<%= order_product.product.price %></td>
            <td class="px-6 py-4 whitespace-nowrap">$<%= order_product.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'Back to Orders', orders_path, class: "bg-blue-500 text-white px-3 py-2 rounded mt-4 inline-block" %>
</div>
