<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4"><%= @product.name %></h1>
  <div class="flex">
    <div class="w-1/2">
      <% if @product.image.attached? %>
        <%= image_tag @product.image, class: "w-full h-64 object-cover" %>
      <% end %>
    </div>
    <div class="w-1/2 pl-4">
      <p class="mb-4"><%= @product.description %></p>
      <p class="text-lg font-bold mb-4">Price: $<%= @product.price %></p>
      <p class="mb-4">Stock: <%= @product.stock_quantity %> items</p>
      <p class="mb-4">Categories: <%= @product.categories.map(&:name).join(", ") %></p>
      <%= link_to 'Back to Products', products_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>