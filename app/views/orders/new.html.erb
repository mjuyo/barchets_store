<h2>Place Your Order</h2>

<%= form_for @order do |f| %>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :province_id, 'Province' %><br />
    <%= f.collection_select :province_id, Province.all, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit "Place Order" %>
  </div>
<% end %>
